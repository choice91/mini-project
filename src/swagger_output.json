  "tags": [
    {
      "name": "auth",
      "description": "auth"
    }
  ],
  "schemes": ["https"],
  "paths": {
    "/auth/signup": {
      "put": {
        "tags": ["auth"],
        "summary": "회원가입",
        "description": "회원가입",
        "operationId": "signup",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "description": "이메일 입력",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "query",
            "description": "비밀번호 입력 (최소 5글자)",
            "required": true,
            "type": "string"
          },
          {
            "name": "name",
            "in": "query",
            "description": "사용자 이름",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "회원가입 성공",
            "schema": {
              "$ref": "#/definitions/inline_response_201"
            }
          },
          "500": {
            "description": "서버에러",
            "schema": {
              "$ref": "#/definitions/inline_response_500"
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["auth"],
        "summary": "로그인",
        "description": "로그인",
        "operationId": "login",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "description": "이메일",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "query",
            "description": "비밀번호",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "로그인 성공",
            "schema": {
              "$ref": "#/definitions/inline_response_200"
            }
          },
          "401": {
            "description": "가입되지 않은 회원",
            "schema": {
              "$ref": "#/definitions/inline_response_401"
            }
          },
          "500": {
            "description": "server error"
          }
        }
      }
    }
  },
  "definitions": {
    "users": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      }
    },
    "inline_response_201": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "example": true
        },
        "message": {
          "type": "string",
          "example": "Signup success"
        },
        "user": {
          "type": "string",
          "example": "6171778d1439cad12a2afbf7"
        }
      }
    },
    "inline_response_500": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "inline_response_200": {
